@{
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}
@model  ClassLibrary.Models.LienKetWeb
<section class="content-header">
    <h1>
        @ViewBag.Title
    </h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i>Admin</a></li>
        <li><a href="/Admin/LienKetWeb">Danh sách liên kết</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<!-- Main content -->
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                @using (Html.BeginForm())
                {
                    <div class="box-body">
                        @Html.AntiForgeryToken()
                        @Html.ValidationSummary("", new { @class = "text-danger" })
                        <div class="row">
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("Tên liên kết", new { @class = "control-lable" })
                                    @Html.TextBoxFor(x => x.lienKetWebName, new { @class = "form-control", @placeholder = "Nhập tên.." })
                                    @Html.ValidationMessageFor(x => x.lienKetWebName, "", new { @class = "text-danger" })
                                </div>
                            </div>
                            <div class="col-md-6">
                                <div class="form-group">
                                    @Html.Label("Link liên kết", new { @class = "control-lable" })
                                    @Html.TextBoxFor(x => x.lienKetWebLink, new { @class = "form-control", @placeholder = "Nhập link.." })
                                    @Html.ValidationMessageFor(x => x.lienKetWebLink, "", new { @class = "text-danger" })
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <div class="form-group">
                                        @Html.Label("Thứ tự", new { @class = "control-lable" })
                                        @Html.TextBoxFor(x => x.isSort, new { @class = "form-control number" })
                                        @Html.ValidationMessageFor(x => x.isSort, "", new { @class = "text-danger" })
                                    </div>
                                </div>
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-2">
                                </div>
                                @Html.HiddenFor(x => x.lienKetWebId)
                                <div class="col-md-2 text-right">
                                    <button type="submit" class="btn btn-primary"><i class="fa fa-save"></i> Lưu dữ liệu</button>
                                </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</section>




