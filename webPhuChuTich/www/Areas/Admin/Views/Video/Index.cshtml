
@{
    ViewBag.Title = "Danh sách video";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutPageAdmin.cshtml";
}
@{
    int ipage = 1;
    if (ViewBag.PageIndex != null)
    {
        ipage = (int)ViewBag.PageIndex;
    }
    int totalPage = 1;
    if (ViewBag.TotalPage != null)
    {
        totalPage = (int)ViewBag.TotalPage;
    }
    int firstPaging = ipage - 2;
    int lastPaging = ipage + 2;
    firstPaging = firstPaging <= 0 ? 1 : firstPaging;
    lastPaging = lastPaging - firstPaging < 5 ? firstPaging + 4 : lastPaging;
    lastPaging = lastPaging >= totalPage ? totalPage : lastPaging;
    bool? trash = (bool?)ViewBag.Trash;
    int count = (ipage - 1) * 20;
}
@model IEnumerable<ClassLibrary.Models.Content>
<section class="content-header">
    <h1 class="title text-uppercase text-bold">@ViewBag.Title</h1>
    <ol class="breadcrumb">
        <li><a href="/Admin"><i class="fa fa-dashboard"></i> Admin</a></li>
        <li><a href="/Admin/Video">Quản lý video</a></li>
        <li class="active">@ViewBag.Title</li>
    </ol>
</section>
<section class="content">
    <div class="row">
        <div class="col-md-12">
            <div class="box">
                @using (Html.BeginForm("Index", "Video", FormMethod.Get, new { @id = "content-list" }))
                {
                    <div class="box-body">
                        <div class="form-group">
                            <div class="row">
                                <div class="col-md-4">
                                    <input type="text" name="_searchKey" value="@ViewBag.SearchKey" class="form-control" placeholder="Nhập từ khóa.." />
                                </div>
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-2">
                                </div>
                                <div class="col-md-2 text-right">
                                    <button type="button" class="btn btn-danger search btn-flat"><i class="fa fa-filter"></i> Lọc</button>
                                    <button type="button" class="btn btn-info btn-flat" onclick="refresh('Video')"><i class="fa fa-refresh"></i> Hủy</button>
                                </div>
                            </div>
                        </div>
                        <div class="form-group">
                            <a href="@Url.Action("Detail", "Video")" class="btn btn-primary btn-flat"><i class="fa fa-plus"></i> Thêm mới</a>
                        </div>
                        <div class="table-responsive">
                            <table class="table table-bordered table-striped">
                                <thead>
                                    <tr>
                                        <th width="50">STT</th>
                                        <th width="350">Tiêu đề</th>
                                        <th width="80">Ngày tạo</th>
                                        <th width="80">Người tạo</th>
                                        <th width="120">Thao tác</th>
                                    </tr>
                                </thead>
                                @if (Model != null && Model.Count() > 0)
                                {
                                    foreach (var item in Model)
                                    {
                                        count++;
                                        <tr>
                                            <td class="text-center">@count</td>
                                            <td>@item.name</td>
                                            <td>@item.createTime.ToString("dd/MM/yyyy")</td>
                                            <td>@item.createUser</td>
                                            <td>
                                                <a title="Cập nhật" class="btn btn-warning btn-flat" href="@Url.Action("Detail", "Video", new { Id = item.contentId })"><i class="fa fa-pencil"></i></a>
                                                <button type="button" class="btn btn-danger btn-flat" title="Xóa" onclick="trash('@item.contentId','Video')"><i class="fa fa-trash"></i></button>
                                            </td>
                                        </tr>
                                    }
                                }
                            </table>
                        </div>
                        @if (totalPage > 1)
                        {
                            <nav aria-label="Page navigation">
                                <ul class="pagination">
                                    @if (firstPaging > 1)
                                    {
                                        <li>
                                            <a href="#" aria-label="Previous" onclick="moveToPreviousPage(@ipage, 'content-list')">
                                                <span aria-hidden="true">&laquo;</span>
                                            </a>
                                        </li>
                                    }
                                    @for (int i = firstPaging; i <= lastPaging; i++)
                                    {
                                        var cssClass = "";
                                        if (i == ipage)
                                        {
                                            cssClass = "active";
                                        }
                                        <li class="@cssClass"><a href="#" onclick="moveToPage(@i, 'content-list')">@i</a></li>
                                    }
                                    @if (lastPaging < totalPage)
                                    {
                                        <li>
                                            <a href="#" aria-label="Next" onclick="moveToNextPage(@ipage, 'content-list')">
                                                <span aria-hidden="true">&raquo;</span>
                                            </a>
                                        </li>
                                    }
                                </ul>
                            </nav>
                        }
                        <input type="hidden" name="_pageIndex" value="@ipage" class="page-to-move" />
                    </div>
                }
            </div>
        </div>
    </div>
</section>

