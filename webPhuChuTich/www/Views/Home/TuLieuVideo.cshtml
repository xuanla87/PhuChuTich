@model IEnumerable<www.Models.Content>
@if (Model != null && Model.Count() > 0)
{
    <h2><a href="tu-lieu-video">Video</a></h2>
    <div class="wrapper-video-slider">
        <div class="video-slider owl-carousel owl-theme">
            @foreach (var item in Model)
            {
                <div class="item">
                    <video controls="controls" poster="@item.thumbnail">
                        <source src="/FileVideo/@item.description" >
                    </video>
                </div>
            }
        </div>
    </div>
}

