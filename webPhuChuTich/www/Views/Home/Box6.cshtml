@{
    int count = 0;
    int count1 = 0;
}
@model IEnumerable<ClassLibrary.Models.Content>
@if (Model != null && Model.Count() > 0)
{
    <h2><a href="@ViewBag.Url">Các điểm di tích và cụm di tích ba đình</a></h2>
    <div class="box-body">
        <div class="box6">
            <div class="row">
                <div class="col-lg-6 col-md-6 col-sm-12">
                    @foreach (var item in Model)
                    {
                        count++;
                        if (count == 1)
                        {
                            <div class="item-first">
                                <div class="thumbnail">
                                    <img src="@item.thumbnail" alt="@item.name" />
                                </div>
                                <div class="title">
                                    <a href="@item.alias" title="@item.name">
                                        @Html.Raw(item.name)
                                    </a>
                                </div>
                                <div class="description">
                                    @Html.Raw(item.description)
                                </div>
                            </div>
                        }
                    }
                </div>
                <div class="col-lg-6 col-md-6 col-sm-12">
                    @foreach (var item in Model)
                    {
                        count1++;
                        if (count1 > 1)
                        {
                            <div class="item">
                                <div class="thumbnail">
                                    <img src="@item.thumbnail" alt="@item.name" />
                                </div>
                                <div class="text">
                                    <a href="@item.alias" title="@item.name">
                                        @Html.Raw(item.name)
                                    </a>
                                    <br />
                                    @Html.Raw(item.description)
                                </div>
                            </div>
                        }
                    }
                </div>
            </div>
        </div>
    </div>
}
